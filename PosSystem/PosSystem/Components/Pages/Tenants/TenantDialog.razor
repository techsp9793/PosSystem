@using System.ComponentModel.DataAnnotations
@using PosSystem.Data.Entities
@using PosSystem.Data.Repositories.Interfaces
@using Microsoft.AspNetCore.Authorization

@* Only Super Admins with Tenant Edit permissions should access this *@
@attribute [Authorize(Policy = "Permissions.Tenants.Edit")]

@inject IUnitOfWork UnitOfWork

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" Model="@Model">
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Name"
                                  Label="Business / Tenant Name"
                                  Required="true"
                                  Variant="Variant.Outlined"
                                  Class="mb-2" />
                </MudItem>

                <MudItem xs="12">
                    <MudSelect T="string"
                               @bind-Value="Model.SubscriptionPlanId"
                               Label="Assigned Subscription Plan"
                               Variant="Variant.Outlined"
                               Required="true"
                               Class="mb-2">
                        @if (!AvailablePlans.Any())
                        {
                            <MudSelectItem Value="@((string)null!)" Disabled="true">No active plans found</MudSelectItem>
                        }
                        @foreach (var plan in AvailablePlans)
                        {
                            <MudSelectItem Value="@plan.Id">
                                @plan.Name (@plan.Price.ToString("C") / @plan.DurationInDays Days)
                            </MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>

                <MudItem xs="12">
                    <MudAlert Severity="Severity.Info" Dense="true" Class="mb-4">
                        Changing the plan will immediately update the permissions available to this tenant's staff.
                    </MudAlert>
                </MudItem>

                <MudItem xs="12">
                    <div class="d-flex align-center justify-space-between border-dashed pa-4 rounded">
                        <MudText Typo="Typo.body1">Tenant Status</MudText>
                        <MudSwitch @bind-Value="Model.IsActive"
                                   Color="Color.Success"
                                   Label="@(Model.IsActive ? "Active (Access Granted)" : "Inactive (Access Revoked)")" />
                    </div>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   OnClick="Submit">
            @(string.IsNullOrEmpty(Model.Id) ? "Provision Tenant" : "Update Tenant")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public Tenant Model { get; set; } = new();

    private MudForm form = default!;
    private List<SubscriptionPlan> AvailablePlans = new();

    protected override async Task OnInitializedAsync()
    {
        // Fetch only plans marked as Active for selection
        var plans = await UnitOfWork.SubscriptionPlans.FindAsync(p => p.IsActive);
        AvailablePlans = plans.OrderBy(p => p.Price).ToList();

        // Set default values for new tenants
        if (string.IsNullOrEmpty(Model.Id))
        {
            Model.IsActive = true;
            Model.CreatedAt = DateTime.UtcNow;
        }
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        await form.Validate();
        if (form.IsValid)
        {
            // Sync the PlanType name for easy display in the Index table
            var selectedPlan = AvailablePlans.FirstOrDefault(p => p.Id == Model.SubscriptionPlanId);
            if (selectedPlan != null)
            {
                Model.PlanType = selectedPlan.Name;
            }

            MudDialog.Close(DialogResult.Ok(Model));
        }
    }
}