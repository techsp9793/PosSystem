    @* Payment Dialog *@
    <MudDialog @bind-Visible="isPaymentDialogVisible" Options="dialogOptions">
        <DialogContent>
            <MudText Typo="Typo.h5" Class="mb-4 text-center">Due: <b>@CurrencySymbol@CartTotal.ToString("N2")</b></MudText>

            @if (showManualUpiInput)
            {
                @* --- MANUAL UPI INPUT --- *@
                <div class="d-flex flex-column gap-3 pa-2">
                    <MudText Typo="Typo.body1">Enter UPI Transaction ID from Customer:</MudText>
                    <MudTextField @bind-Value="manualTransactionId" Label="Transaction ID / Ref No" Variant="Variant.Outlined" AutoFocus="true" />
                    <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="ConfirmManualUpi" Disabled="@string.IsNullOrWhiteSpace(manualTransactionId)">
                        Confirm Payment
                    </MudButton>
                    <MudButton Variant="Variant.Text" OnClick="@(() => showManualUpiInput = false)">Back</MudButton>
                </div>
            }
            @* else if (showSmsLinkInput)
            {
                <div class="d-flex flex-column gap-3 pa-2">
                    <MudText Typo="Typo.body1">Send Payment Link via SMS</MudText>
                    <MudTextField @bind-Value="smsPhoneNumber" Label="Customer Mobile" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Phone" />

                    @if (isSendingLink)
                    {
                        <MudProgressLinear Color="Color.Info" Indeterminate="true" Class="my-2" />
                    }
                    else
                    {
                        <MudButton Variant="Variant.Filled" Color="Color.Info" OnClick="SendSmsLink" StartIcon="@Icons.Material.Filled.Send">
                            Send Link
                        </MudButton>
                    }
                    <MudButton Variant="Variant.Text" OnClick="@(() => showSmsLinkInput = false)">Back</MudButton>
                </div>
            }
            else if (isListeningForWebhook)
            {
                <MudPaper Class="pa-4 border-2 mud-border-primary border-dashed d-flex flex-column align-center gap-3">
                    @if (!string.IsNullOrEmpty(QrImageBase64))
                    {
                        <img src="@QrImageBase64" width="200" height="200" style="border: 1px solid #ccc; border-radius: 8px;" />
                    }
                    else
                    {
                        <MudProgressCircular Indeterminate="true" Size="Size.Medium" Color="Color.Primary" />
                    }

                    <div class="d-flex align-center gap-2">
                        <MudProgressCircular Indeterminate="true" Size="Size.Small" Color="Color.Info" />
                        <MudText Typo="Typo.h6" Color="Color.Primary">Listening for Payment...</MudText>
