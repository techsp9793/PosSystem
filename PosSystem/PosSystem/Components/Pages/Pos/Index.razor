            var newOrder = new Order
            {
                Id = Guid.NewGuid().ToString(),
                OrderNumber = $"ORD-{DateTime.Now:yyyyMMdd}-{DateTime.Now.Ticks.ToString().Substring(10)}",
                TotalAmount = CartTotal,
                PaymentMethod = method,
                PaymentReferenceId = referenceId,
