<MudCard Elevation="4" Class="pa-8 mx-auto" Style="max-width: 450px;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h5" Class="text-center">@Title</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @ChildContent
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public RenderFragment? ChildContent { get; set; }
}